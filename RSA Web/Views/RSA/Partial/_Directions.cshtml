@model List<DirectionView>

<details open>
    <summary>Направления</summary>

    @for (int i = 0; i < Model.Count; i++)
    {
    <div class="form-group direction">
        @Html.TextBoxFor(model => model[i].Index, null, new { @class="form-control", @readonly="readonly"})
        @Html.TextBoxFor(model => model[i].Value, null, new { @id = "D_" + i, @class = "form-control" })
    </div>
    }
</details>




