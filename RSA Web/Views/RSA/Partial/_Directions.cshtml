@model List<DirectionView>
@{
    ViewData["Title"] = "Направления";
    Layout = "_Layout";
}

<details open>
<summary>@ViewData["Title"]</summary>

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            @Html.LabelFor(model => model[i].Index, null, new { @class = "" })
            @Html.TextBoxFor(model => model[i].Value)
        </div>
    }
</details>




