@model StepView
@{
    ViewData["Title"] = "Шаг";
    Layout = "_Layout";
}
<details open>

    <summary>@Html.DisplayNameFor(Model => Model)</summary>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(model => model.StepNumber, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.StepNumber, null, new { @class = "form-control", @readonly = "readonly", @autocomplete = "off" })
        </div>

        @Html.Partial("Partial/_Point", Model.Point)

        <div class="form-group">
            @Html.LabelFor(model => model.FunctionValue, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.FunctionValue, null, new { @class = "form-control", @readonly = "readonly", @autocomplete = "off" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsGoodSolution, new { @class = "control-label" })
            @Html.TextBoxFor(model => model.IsGoodSolution, null, new { @class = "form-control", @readonly = "readonly", @autocomplete = "off" })
        </div>

        @Html.LabelFor(model => model.Direction, new { @class = "control-label" })

        @Html.Partial("Partial/_Direction", Model.Direction);
    }
</details>
