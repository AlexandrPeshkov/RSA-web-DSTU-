@model List<Direction>
@{
    ViewData["Title"] = "Направления";
    Layout = "_Layout";
}

<form method="post">
    <label>Направления</label>
    @for (int i = 0; i < Model.Count; i++)
    {
        <div>
            <input name="Directions[@i].direction" id=Dir_@i type="text" class="form-control" placeholder="V[@i]" value="@Model[i].direction">
            <input name="Directions[@i].index" id=Dir_@i type="text" class="form-control" placeholder="V[@i]" value="@Model[i].index" readonly>
        </div>
    }
    <button type="button" asp-action="Directions" class="btn btn-warning">Случайные</button>
    <button type="submit" class="btn btn-success">Применить</button>
</form>

